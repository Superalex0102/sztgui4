<Window x:Class="feladat4.SnackEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:feladat4"
        mc:Ignorable="d"
        Title="SnackEditorWindow" Height="220" Width="320">
    <Grid>
        <StackPanel>
            <Label Content="Name" Background="AliceBlue" FontSize="12"/>
            <TextBox Text="Twix" Padding="5"/>
            <Label Content="Price" Background="AliceBlue" FontSize="12"/>
            <TextBox Text="300" Padding="5"/>
            <Label Content="Quantity" Background="AliceBlue" FontSize="12"/>
            <TextBox Text="20" Padding="5"/>
            <Button Content="Save" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
